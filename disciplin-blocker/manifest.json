{
  "manifest_version": 3,
  "name": "Disciplin Website Blocker",
  "version": "1.0.0",
  "description": "Block websites to maintain focus and discipline",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "tabs",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Disciplin Blocker"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "disciplin_rules",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}
